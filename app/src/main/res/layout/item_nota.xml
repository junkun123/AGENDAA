<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNombreNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btnBorrarNota"
                android:layout_centerVertical="true"
                android:text="Nombre de la nota"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <ImageButton
                android:id="@+id/btnBorrarNota"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/btnEditarNota"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                app:tint="?attr/colorSecondary"
                android:contentDescription="Borrar nota"
                android:padding="8dp"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btnEditarNota"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                app:tint="?attr/colorSecondary"
                android:contentDescription="Editar nota"
                android:padding="8dp"/>

        </RelativeLayout>

        <!-- Campos ocultos hasta que se haga click -->
        <LinearLayout
            android:id="@+id/layoutDetalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="12dp"
            android:layout_marginTop="8dp" > <!-- Línea eliminada -->

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvCorreoElectronico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo Electrónico"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>